.spinner
    display inline-block
    min-width 80px
    width 80px
    position relative
    clear fix
    input
        text-align center
        padding 0 40px 0 10px
.spinnerControl
    display block
    position absolute
    width 30px
    background-image linear-gradient(0deg,  #888888 0%, #717171 100%)
    right 0
    top 0
.spinnerUp
    display block
    height 15px
    width 30px
    outline 0
    border 0
    transform rotate(180deg)
    background-repeat no-repeat
    background-position center 45%
    background-color transparent
    background-image inline("iconArrowDown.svg")

.spinnerDown
    display block
    height 15px
    width 30px
    outline 0
    border 0
    background-repeat no-repeat
    background-position center 45%
    background-color transparent
    background-image inline("iconArrowDown.svg")
