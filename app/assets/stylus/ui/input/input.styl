input
    appearance: none !important
ks-placeholder()
    if selector() == "&"
        error( "placeholder() must be called from a ruleset!" )
    &::-webkit-input-placeholder
        {block}
    &:-moz-placeholder
        {block}
    &::-moz-placeholder
        {block}
    &:-ms-input-placeholder
        {block}

.input
    display inline-block
    width 100%
    background-color #EFEFEF
    border 1px solid #CECECE
    font-family Arial, sans-serif
    font-size 13px
    line-height 14px
    color #444444
    height 30px
    padding 0 20px
    -webkit-appearance: none;
    -webkit-border-radius: 0;
    +ks-placeholder()
        color #444444
        padding-top 1px
    &:focus, &:active
        outline 0

.inputSmall
    padding 0 10px
    width 80px
.input.error
    border 2px solid #D65454
.inputTime
    display inline-block
    vertical-align middle
    width 80px
    position relative
    &:before
        position absolute
        content ' '
        width 30px
        height 30px
        background-image linear-gradient(0deg,  #888888 0%, #717171 100%)
        right 0
        top 0
    &:after
        position absolute
        content ' '
        width 30px
        height 30px
        background-repeat no-repeat
        background-position center center
        background-color transparent
        background-image inline("iconArrowDown.svg")
        right 0
        top 0
label.error
    display block
    margin-bottom -12px
    color #444444
    font-family Arial, sans-serif
    height 12px
.textarea
    display inline-block
    width 100%
    height 100px
    background-color #EFEFEF
    border 1px solid #CECECE
    font-family Arial, sans-serif
    font-size 13px
    line-height 15px
    color #444444
    padding 8px 20px
    -webkit-appearance: none;
    -webkit-border-radius: 0;
    +ks-placeholder()
        color #444444
        padding-top 1px
    &:focus, &:active
        outline 0

.inputWithIcon
    display inline-block
    position relative
    width 100%
    .iconBlue
        display block
        position absolute
        top 4px
        left 10px
        svg
            size 21px
            stroke #00ADEF
            fill none
    input
        padding-left 38px
