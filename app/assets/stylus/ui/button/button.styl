.buttonTpl
    display inline-block
    position relative
    height 40px
    font-family 'Corporate', sans-serif
    font-size 16px
    line-height 16px
    padding 12px 50px 12px
    font-weight 400
    border 0
    outline 0
    background-color #000
    color #fff
    border-radius 5px
    transition all .4s
    &:hover
        background-color #00ADEF
    .icon
        display block
        position absolute
        left 10px
        top 7px
        svg
            size 25px
            stroke #000
            fill none
.buttonBlue
    @extend .buttonTpl
    background-color #00ADEF
    color #fff
    &:hover
        background-color #000

.buttonBlack
    @extend .buttonTpl
    background-color #000
    color #fff
    &:hover
        background-color #00ADEF
    .icon
        svg
            stroke #fff

.buttonGrey
    @extend .buttonTpl
    background-color #E0E0E0
    color #5B5B5B
    &:hover
        background-color #BFBFBF

.buttonPink
    @extend .buttonTpl
    background-color #EDB1B2
    color #000
    &:hover
        background-color #D87777

.buttonGreen
    @extend .buttonTpl
    background-color #AADD9E
    color #000
    &:hover
        background-color #87C176

.buttonOutline
    @extend .buttonTpl
    border 1px solid #B3B3B3
    background-color #FFF
    color #000
    &:hover
        background-color #00ADEF
        color #fff
        border-color #00ADEF
        .icon
            svg
                stroke #fff
