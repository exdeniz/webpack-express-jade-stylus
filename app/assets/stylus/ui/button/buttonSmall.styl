.buttonTplSmall
    display inline-block
    height 30px
    min-width 120px
    font-family 'Corporate', sans-serif
    font-size 14px
    line-height 14px
    padding 0 30px
    font-weight 400
    border 0
    outline 0
    background-color #EDB1B2
    color #000
    border-radius 5px
    transition all .4s
    &:hover
        color #fff
        background-color #00ADEF
    .icon
        display block
        position absolute
        left 10px
        top 7px
        svg
            size 25px
            stroke #000
            fill none
.buttonBlueSmall
    @extend .buttonTplSmall
    background-color #00ADEF
    color #fff
    &:hover
        background-color #000

.buttonBlackSmall
    @extend .buttonTplSmall
    background-color #000
    color #fff
    &:hover
        background-color #00ADEF
    .icon
        svg
            stroke #fff

.buttonGreySmall
    @extend .buttonTplSmall
    background-color #E0E0E0
    color #5B5B5B
    &:hover
        background-color #BFBFBF

.buttonPinkSmall
    @extend .buttonTplSmall
    background-color #EDB1B2
    color #000
    &:hover
        background-color #D87777

.buttonGreenSmall
    @extend .buttonTplSmall
    background-color #AADD9E
    color #000
    &:hover
        background-color #87C176

.buttonOutlineSmall
    @extend .buttonTplSmall
    border 1px solid #B3B3B3
    background-color #FFF
    color #000
    &:hover
        background-color #00ADEF
        color #fff
        border-color #00ADEF
        .icon
            svg
                stroke #fff

