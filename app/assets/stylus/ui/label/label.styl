.label
    display inline-block
    vertical-align middle
    font-family Arial, sans-serif
    color #444444
    font-size 13px
    margin-right 5px
.labelRadio
    display inline-block
    cursor pointer
    font-family 'Corporate', sans-serif
    font-size 16px
    font-weight 400
    line-height 20px
    .iradio
        margin-right 10px
    span
        display inline-block
        vertical-align middle
.labelCheckbox
    display inline-block
    vertical-align middle
    cursor pointer
    font-family Arial, sans-serif
    font-size 13px
    font-weight 400
    color #444444
    &Input
        display table-cell
        vertical-align middle
    &Text
        display table-cell
        vertical-align middle
        padding-top 1px
        padding-left 12px
